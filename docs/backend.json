{
  "entities": {
    "User": {
      "title": "User",
      "description": "Represents a user of the application.",
      "type": "object",
      "properties": {
        "uid": {
          "type": "string",
          "description": "The user's unique ID."
        },
        "name": {
          "type": "string",
          "description": "The user's full name."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's email address."
        },
        "role": {
          "type": "string",
          "description": "The user's role.",
          "enum": ["student", "teacher"]
        }
      },
      "required": ["uid", "name", "email", "role"]
    },
    "Resource": {
      "title": "Resource",
      "description": "Represents an educational resource.",
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "description": "Type of the resource",
          "enum": ["lesson-plan-pdf", "lesson-plan-word", "video", "infographic", "mind-map", "pdf-note"]
        },
        "title": {
          "type": "string",
          "description": "Title of the resource."
        },
        "url": {
          "type": "string",
          "description": "Download URL from Firebase Storage or video link."
        },
        "class": {
          "type": "string",
          "description": "Class the resource is for."
        },
        "subject": {
          "type": "string",
          "description": "Subject the resource is for."
        },
        "chapter": {
          "type": "string",
          "description": "Chapter the resource is for."
        },
        "authorId": {
          "type": "string",
          "description": "ID of the admin who uploaded it."
        }
      },
      "required": ["type", "title", "url", "class", "subject", "chapter", "authorId"]
    }
  },
  "auth": {
    "providers": ["Email/Password", "Google"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": {
        "$ref": "#/entities/User"
      },
      "description": "Stores user profile information."
    },
    "/resources/{resourceId}": {
      "schema": {
        "$ref": "#/entities/Resource"
      },
      "description": "Stores educational resources."
    }
  }
}
